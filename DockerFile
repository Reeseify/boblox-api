FROM mcr.microsoft.com/dotnet/sdk:7.0 AS build

WORKDIR /app

# Copy only the csproj file first (to enable cache and proper restore)
COPY ServerManagerApp/ServerManagerApp.csproj ./ServerManagerApp/

# Run restore on the specific project file
RUN dotnet restore ./ServerManagerApp/ServerManagerApp.csproj

# Now copy everything else
COPY . ./

# Build the project
RUN dotnet build ./ServerManagerApp/ServerManagerApp.csproj -c Release -o /app/build

# Publish the project
RUN dotnet publish ./ServerManagerApp/ServerManagerApp.csproj -c Release -o /app/publish

# Runtime image
FROM mcr.microsoft.com/dotnet/aspnet:7.0 AS runtime
WORKDIR /app
COPY --from=build /app/publish ./
ENTRYPOINT ["dotnet", "ServerManagerApp.dll"]
